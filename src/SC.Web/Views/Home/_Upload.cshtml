@model LogFileViewModel

<div class="col-lg-12 col-md-12">
    <form class="form-inline" action="@Url.Action("Upload")" method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="ScannerId">Scanner</label>
            <select class="form-control" name="ScannerId" id="ScannerId" required="required">
                <option></option>
                @foreach (var item in Model.Scanners)
                {
                    <option value="@item.Key">@item.Value</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="LogFile">Log file</label>
            <input type="file" class="form-control" id="LogFile" accept="*.log" name="LogFile" required="required">
        </div>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span>
            Upload
        </button>
    </form>
</div>
